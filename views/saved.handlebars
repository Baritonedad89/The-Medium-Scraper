{{#each saved}}
{{#if headline}}
<div class="row">
        <div class="col l12">
          <div class="card light-blue darken-4">
            <div class="card-content white-text">
              <span class="card-title"><a href="{{this.url}}" target="_blank" data-id="{{this._id}}">{{this.headline}}</a></span>
              <p data-id="{{this._id}}">{{this.summary}}</p>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-light btn" id="save-btn" data-id={{this._id}}>Save Article</a>

            </div>
          </div>
        </div>
      </div>
{{/if}}
{{/each}}
      
      