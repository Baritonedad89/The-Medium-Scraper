<div class="grey lighten-5">
  <div class="navbar-fixed ">
    <nav class="white">
      <div class="container">
        <div class="nav-wrapper">
          <a href="/" class="brand-logo black-text"><span style="font-family: 'Abril Fatface', cursive; font-size: 28px;
">Medium</span> | <span style="font-size: 24px">Scraper</span></a>
          <ul class="right hide-on-med-and-down">
            <li><a href="/" class="black-text">Home</a></li>
            <li><a class="waves-effect waves-light btn" id="clear-all-btn">Clear Articles!</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <h1>SAVED ARTICLES</h1>
  <div class="container">
    <div class="row">
      <div class="col l12">
        {{#each savedArticles}}
        {{#if isSaved}}
        <div class="row" id="row-{{this._id}}">
          <div class="col l12">
            <div class="card light-blue darken-4">
              <div class="card-content white-text">
                <span class="card-title"><a href="{{this.url}}" target="_blank"
                    data-id="{{this._id}}">{{this.headline}}</a></span>
                <p data-id="{{this._id}}">{{this.summary}}</p>
              </div>
              <div class="card-action">
                <a class="waves-effect waves-light btn" id="delete-saved" data-id={{this._id}}>delete from saved</a>
                {{!-- modal trigger --}}
                <a class="waves-effect waves-light btn modal-trigger" id="article-notes" href="#modal1"
                  data-id={{this._id}}>Comment</a>

              </div>
            </div>
          </div>
        </div>
        <ul class="collapsible">
          <li>
            <div class="collapsible-header">Comments for "{{this.headline}}</div>
            <div class="collapsible-body"><span></span></div>
          </li>
        </ul>


        <!-- Modal Structure -->
        <div id="modal1" class="modal">
          <div class="modal-content">
            <div class="row" data-id="{{this._id}}">
              <div class="input-field col s6">
                <input id="name"  data-id="{{this._id}}"type="text" class="validate">
                <label for="name">Name</label>
              </div>
            </div>
            <div class="row" data-id="{{this._id}}">
              <div class="col s12">
                <div class="input-field">
                  <textarea id="comment"  data-id="{{this._id}}"class="materialize-textarea"></textarea>
                  <label for="comment">Textarea</label>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <a href="#!" data-id="{{this._id}}" id="comment-submit-btn"class="modal-close waves-effect waves-green btn-flat">Submit</a>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>